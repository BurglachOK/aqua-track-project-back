          }
        }
      }
    },
    "/auth/reset-pwd": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Reset user`s password",
        "operationId": "resetPassword",
        "description": "Reset user`s password with payload",
        "security": [],
        "requestBody": {
          "description": "User reset password details",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
